  "devDependencies": {
    "fs-extra": "^11.2.0",
    "http-server": "^14.1.1",
    "@types/chai": "^4.3.11",
    "@types/mocha": "^10.0.6",
    "chai": "^5.0.0",
    "mocha": "^10.2.0"
  }
