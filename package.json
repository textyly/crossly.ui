  "main": "app.js",
  "type": "module",
  "scripts": {
    "compile": "tsc",
    "copy": "node ./scripts/copy.js",
    "build": "npm i && npm run compile && npm run copy",
    "start-server": "http-server ./ -p 5000 -c-1",
